{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sensor (Remonte)",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "tipo": {
            "type": "string",
            "enum": [
                "temperatura",
                "vibracion",
                "aforo"
            ]
        },
        "ubicacionId": {
            "type": "string"
        },
        "estadoOperacional": {
            "type": "string",
            "enum": [
                "Operativo",
                "Mantenimiento",
                "Cerrado"
            ]
        }
    },
    "required": [
        "id",
        "tipo",
        "ubicacionId",
        "estadoOperacional"
    ]
}