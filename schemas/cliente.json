{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Cliente",
    "description": "Representa un cliente y su información de forfait en el sistema CRM.",
    "type": "object",
    "properties": {
        "clienteId": { "type": "string", "description": "Identificador único del cliente/forfait." },
        "nombreCompleto": { "type": "string", "description": "Nombre completo del cliente." },
        "email": { "type": "string", "format": "email", "description": "Correo electrónico de contacto." },
        "tipoForfait": { "type": "string", "description": "Tipo de abono (Diario, Temporada, etc.)." },
        "saldoMonedero": { "type": "number", "format": "float", "description": "Crédito precargado para compras en la estación (€)." }
    },
    "required": ["clienteId", "nombreCompleto", "email", "tipoForfait"]
}