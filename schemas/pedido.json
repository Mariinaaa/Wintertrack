{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Pedido",
    "description": "Representa una transacción comercial (compra de forfait, alquiler, etc.) en el sistema ERP.",
    "type": "object",
    "properties": {
        "pedidoId": { "type": "string", "description": "Identificador único de la transacción." },
        "clienteId": { "type": "string", "description": "Referencia al cliente que realiza el pedido (Relación)." },
        "fechaPedido": { "type": "string", "format": "date-time", "description": "Fecha y hora en formato ISO 8601." },
        "totalMonto": { "type": "number", "format": "float", "description": "Valor total del pedido (€)." },
        "estado": { "type": "string", "enum": ["Completado", "Pendiente de Pago", "Cancelado"], "description": "Estado actual de la transacción." }
    },
    "required": ["pedidoId", "clienteId", "fechaPedido", "totalMonto", "estado"]
}