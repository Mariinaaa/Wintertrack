{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cliente enriquecido con sensores y lecturas",
  "type": "object",
  "properties": {
    "clienteId": { "type": "string" },
    "nombreCompleto": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "ubicacionId": { "type": "string" },
    "sensores": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sensorId": { "type": "string" },
          "tipo": { "type": "string" },
          "estadoOperacional": { "type": "string" },
          "lecturas": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "valor": { "type": ["number", "integer"] },
                "unidad": { "type": "string" },
                "timestamp": { "type": "string", "format": "date-time" }
              },
              "required": ["id", "valor", "unidad", "timestamp"],
              "additionalProperties": false
            }
          }
        },
        "required": ["sensorId", "tipo", "estadoOperacional", "lecturas"],
        "additionalProperties": false
      }
    }
  },
  "required": ["clienteId", "nombreCompleto", "email", "ubicacionId", "sensores"],
  "additionalProperties": false
}
